<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Members">

	<select id="idcheck" resultType="member" parameterType="String">
		select *
		from member where id = #{id}
	</select>

	<insert id="insert" parameterType="member">
		INSERT INTO member
		VALUES
		(#{id}, #{password}, #{name}, #{age}, #{gender}, #{email})
	</insert>

	<update id="update">
		update member
		set id=#{id}, name=#{name}, age=#{age},
		gender=#{gender}, email=#{email}
		where id = #{id}
	</update>

	<sql id="search_">
	<if test="search_field != null">
			and
			<foreach collection="search_field" separator="or" item="index">
			<choose>
				<when test='index=="I"'>id</when>
				<when test='index=="N"'>name</when>
				<when test='index=="A"'>age</when>
				<when test='index=="G"'>gender</when>
			</choose>
			like #{search_word}
			</foreach>
		</if>
	</sql>

	<select id="searchCount" parameterType="map" resultType="int">
		select count(*) from member
		where id != 'admin'
		<include refid="search_"/>
	</select>

	<select id="getSearchList" parameterType="map" resultType="member">
		select * from (select rownum rnum, b.* from (select * from member
		where id != 'admin'
		<include refid="search_"/>
		order by id
		)b
		)
		where rnum &gt; = #{start} and rnum &lt; = #{end}
	</select>
	
	<delete id="delete">
		delete from member where id = #{id}
	</delete>

</mapper>